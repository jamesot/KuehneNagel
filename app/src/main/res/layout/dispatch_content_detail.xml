<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp">
<!--60dp-->

    <RelativeLayout
        android:id="@+id/shiplabel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Flight Name"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </RelativeLayout>



    <TextView
        android:id="@+id/flight_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text=""
        android:layout_toEndOf="@+id/shiplabel"
        android:layout_toRightOf="@+id/shiplabel"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/dlabel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flight_name"
        android:layout_alignParentLeft="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Shipment Date"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/shipment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@+id/dlabel"
        android:layout_toRightOf="@+id/dlabel"
        android:textSize="12sp"
        android:layout_below="@+id/flight_name"
        />

    <RelativeLayout
        android:id="@+id/seallabel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipment_date"
        android:layout_alignParentLeft="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Pallet Number"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/pallet_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_toEndOf="@+id/dlabel"
        android:layout_toRightOf="@+id/dlabel"
        android:layout_below="@+id/shipment_date"/>

    <RelativeLayout
        android:id="@+id/pt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pallet_number"
        android:layout_alignParentLeft="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Contour"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/contour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_toEndOf="@+id/pt"
        android:layout_toRightOf="@+id/pt"
        android:layout_below="@+id/pallet_number"/>

    <RelativeLayout
        android:id="@+id/truckl"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contour"
        android:layout_alignParentLeft="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Pallet ID"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/pallet_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_toEndOf="@+id/truckl"
        android:layout_toRightOf="@+id/truckl"
        android:layout_below="@+id/contour"/>

