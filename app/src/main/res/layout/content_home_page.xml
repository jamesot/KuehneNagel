    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kuehnenagel.android.HomePage"
    tools:showIn="@layout/app_bar_home_page"
    android:background="#FFFFFF">
